<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>rl</ToolCommandName>
    <PackageId>RepoLauncher</PackageId>
    <Version>1.0.0</Version>
    <Authors>RepoLauncher</Authors>
    <Description>Cross-platform tool for launching development workspaces (Windows Terminal on Windows, Alacritty + Zellij on Linux)</Description>
  </PropertyGroup>

</Project>
